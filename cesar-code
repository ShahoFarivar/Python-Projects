			hash.append(code[len(codex)])
		else:
			x= abs((len(codex)-1)- (ind+key))-1
			hash.append(codex[x])
			
def main_loop():
	global key
	global hashString
	global phraseList
	global hash
	while True:
		get_input()
		key=check_key()
		select=select_mode()	
		if select=="e":
			encrypt()
		elif select=="d":
			decrypt()
		elif select=="q":
			sys.exit()
		print_hash()
		hash.clear()
		hashString=""
		phraseList.clear()
		key=0
		
main_loop()
